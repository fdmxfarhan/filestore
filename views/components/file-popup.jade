.popup.file#add-file-popup
    i.fa.fa-times.close-popup
    .title-line
        .popup-title
            h1 افزودن فایل جدید
    //- .description مشاور املاک جدد می‌تواند 30 روز به صورت رایگان از امکانات فایل استور استفاده نماید.
    form(action="/dashboard/add-file" method="POST")
        .multi-column-form
            .col50
                .double-text-input
                    label(for="ownerName") نام مالک
                    input.textinput(type="text" placeholder="" name="ownerName" value= "#{ typeof ownerName != 'undefined' ? ownerName: '' }")
                    label(for="constPhone") تلفن
                    input.textinput(type="text" placeholder="" name="constPhone" value= "#{ typeof constPhone != 'undefined' ? constPhone: '' }")
                .text-area-input 
                    label(for="address") آدرس
                    textarea(name="address")
            .col50
                .double-text-input
                    label(for="phone") همراه
                    input.textinput(type="text" placeholder="" name="phone" value= "#{ typeof phone != 'undefined' ? phone: '' }")
                    label(for="date") تاریخ
                    input.textinput(type="text" placeholder="" name="date" value= "#{ typeof date != 'undefined' ? date: '' }")
                .double-text-input
                    label(for="type") نوع
                    input.textinput(type="text" placeholder="" name="type" value= "#{ typeof type != 'undefined' ? type: '' }")
                    label(for="fileNumber") شماره
                    input.textinput(type="text" placeholder="" name="fileNumber" value= "#{ typeof fileNumber != 'undefined' ? fileNumber: '' }")
                .double-text-input
                    label(for="state") وضعیت
                    input.textinput(type="text" placeholder="" name="state" value= "#{ typeof state != 'undefined' ? state: '' }")
                    label(for="role") سمت
                    input.textinput(type="text" placeholder="" name="role" value= "#{ typeof role != 'undefined' ? role: '' }")
        .table-form 
            table 
                tr 
                    th متراژ
                    th خواب
                    th طبقه
                    th طبقات
                    th واحد
                    th سن بنا
                    th پارکینگ
                    th انباری
                    th آسانسور
                    th آشپزخانه
                    th نما
                    th کف
                    th سرویس
                    th سرمایش و گرمایش
                tr 
                    td
                        input(type="text" placeholder="" name="meterage" value="")
                    td
                        input(type="text" placeholder="" name="bedroom" value="")
                    td
                        input(type="text" placeholder="" name="floor" value="")
                    td
